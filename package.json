{
  "name": "create-bod-app",
  "private": true,
  "description": "Boilerplate CLI App",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "badge": "ts-node scripts/badge.ts",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "canary": "ts-node scripts/canary.ts",
    "clean": "lerna clean --yes",
    "e2e": "ts-node scripts/e2e.ts",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "release": "ts-node scripts/release.ts --push",
    "start": "npm run start:template",
    "start:all": "lerna run start",
    "start:bod": "npm start -w bod",
    "start:template": "npm start -w cra-template-bod",
    "test": "jest --watch",
    "test:all": "lerna run test && jest"
  },
  "keywords": [
    "bod",
    "bod-cli",
    "boilerplate",
    "cli",
    "create-react-app",
    "react",
    "react-scripts",
    "starter",
    "starter-kit",
    "template",
    "typescript"
  ],
  "author": "sabertazimi <sabertazimi@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabertazimi/bod.git"
  },
  "homepage": "https://sabertazimi.github.io/bod",
  "bugs": {
    "url": "https://github.com/sabertazimi/bod/issues"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@types/node-fetch": "^2.5.12",
    "@types/semver": "^7.3.8",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.2",
    "ci-info": "^3.2.0",
    "concurrently": "^6.2.1",
    "consola": "^2.15.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.1.1",
    "lerna": "^4.0.0",
    "node-fetch": "^2.6.2",
    "prettier": "^2.3.2",
    "semver": "^7.3.5",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.2",
    "verdaccio": "^5.1.4"
  }
}
