{
  "name": "@dg-scripts/webpack-template",
  "version": "6.1.0",
  "packageManager": "pnpm@10.30.0",
  "description": "Minimal webpack boilerplate",
  "author": "sabertazimi",
  "license": "MIT",
  "homepage": "https://github.com/sabertazimi/bod",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabertazimi/bod.git"
  },
  "bugs": {
    "url": "https://github.com/sabertazimi/bod/issues"
  },
  "keywords": [
    "webpack",
    "boilerplate",
    "template"
  ],
  "main": "./src/index.js",
  "engines": {
    "node": ">=18"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "badge": "tsx scripts/badge.ts",
    "build": "cross-env NODE_ENV=production webpack",
    "dev": "cross-env NODE_ENV=development webpack serve",
    "lint": "pnpm lint:style && pnpm lint:type-check",
    "lint:style": "stylelint ./src/**/*.css && eslint ./src",
    "lint:type-check": "tsc --noEmit",
    "lint:fix": "stylelint ./src/**/*.css --fix && eslint ./src --fix",
    "changeset": "commit-and-tag-version --dry-run -s",
    "release": "commit-and-tag-version -s",
    "start": "pnpm dev",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/plugin-transform-class-properties": "^7.28.6",
    "@babel/plugin-transform-object-rest-spread": "^7.28.6",
    "@babel/preset-env": "^7.29.0",
    "@dg-scripts/eslint-config": "workspace:^",
    "@dg-scripts/stylelint-config": "workspace:^",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^24.10.13",
    "@vitest/coverage-v8": "^4.0.18",
    "babel-loader": "^10.0.0",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.4",
    "css-minimizer-webpack-plugin": "^7.0.4",
    "dotenv": "^17.3.1",
    "eslint": "^9.39.2",
    "eslint-webpack-plugin": "^5.0.2",
    "file-loader": "^6.2.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.6",
    "jsdom": "^27.4.0",
    "mini-css-extract-plugin": "^2.10.0",
    "postcss": "^8.5.6",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^8.2.1",
    "postcss-preset-env": "^11.1.3",
    "prettier": "^3.8.1",
    "sass-loader": "^16.0.7",
    "style-loader": "^4.0.0",
    "stylelint": "^17.3.0",
    "stylelint-webpack-plugin": "^5.1.0",
    "ts-loader": "^9.5.4",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "undici": "^7.22.0",
    "url-loader": "^4.1.1",
    "vitest": "^4.0.18",
    "webpack": "^5.105.2",
    "webpack-bundle-analyzer": "^5.2.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3",
    "webpackbar": "^7.0.0"
  }
}
