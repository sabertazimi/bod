{
  "name": "@dg-scripts/webpack-template",
  "version": "5.21.3",
  "packageManager": "pnpm@9.9.0",
  "description": "Minimal webpack boilerplate",
  "author": "sabertazimi",
  "license": "MIT",
  "homepage": "https://github.com/sabertazimi/bod",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabertazimi/bod.git"
  },
  "bugs": {
    "url": "https://github.com/sabertazimi/bod/issues"
  },
  "keywords": [
    "webpack",
    "boilerplate",
    "template"
  ],
  "main": "./src/index.js",
  "engines": {
    "node": ">=18"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "badge": "ts-node scripts/badge.ts",
    "build": "cross-env NODE_ENV=production webpack",
    "dev": "cross-env NODE_ENV=development webpack serve",
    "lint": "pnpm lint:style && pnpm lint:type-check",
    "lint:style": "stylelint ./src/**/*.css && eslint ./src",
    "lint:type-check": "tsc --noEmit",
    "lint:fix": "stylelint ./src/**/*.css --fix && eslint ./src --fix",
    "changeset": "commit-and-tag-version --dry-run -s",
    "release": "commit-and-tag-version -s",
    "start": "pnpm dev",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-class-properties": "^7.25.4",
    "@babel/plugin-transform-object-rest-spread": "^7.24.7",
    "@babel/preset-env": "^7.25.4",
    "@dg-scripts/eslint-config": "workspace:^",
    "@dg-scripts/stylelint-config": "workspace:^",
    "@svgr/webpack": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.16.3",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-webpack-plugin": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.1",
    "postcss": "^8.4.42",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.0.2",
    "prettier": "^3.3.3",
    "sass-loader": "^16.0.1",
    "style-loader": "^4.0.0",
    "stylelint": "^16.9.0",
    "stylelint-webpack-plugin": "^5.0.1",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4",
    "undici": "^6.19.8",
    "url-loader": "^4.1.1",
    "webpack": "^5.94.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "webpackbar": "^6.0.1"
  }
}
