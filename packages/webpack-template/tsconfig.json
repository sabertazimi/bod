{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "lib": ["DOM", "ESNext", "ES2021"],
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {},
    "allowJs": true,
    "strict": true,
    "declaration": false,
    "importHelpers": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "index.d.ts"],
  "exclude": [
    "node_modules",
    "build",
    "coverage",
    "dist",
    "typings"
  ],
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs"
    }
  }
}
